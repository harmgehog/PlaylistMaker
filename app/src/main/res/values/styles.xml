<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TintedNavigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/medium_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="iconPadding">@dimen/small_padding</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:padding">16dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SearchEditViewStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/search_text</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:inputType">text</item>
        <item name="android:drawableStart">@drawable/ic_search_16dp</item>
        <item name="android:drawableTint">?attr/colorOnSecondary</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:background">@drawable/ic_edit_background</item>
        <item name="android:textCursorDrawable">@drawable/ic_edit</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:focusedByDefault">true</item>
    </style>

    <style name="SearchTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SearchButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/medium_corner_radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/graphite_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

</resources>