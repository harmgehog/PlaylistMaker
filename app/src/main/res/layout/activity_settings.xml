<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_marginBottom="@dimen/toolbar_margin_bottom"
        android:background="@color/white"
        android:onClick="onBackPress"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="@string/settings"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nightMode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_height"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:gravity="start|center_vertical"
            android:padding="@dimen/medium_padding"
            android:text="@string/night_mode"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            app:drawableRightCompat="@drawable/ic_switch_light" />

        <TextView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_height"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:gravity="start|center_vertical"
            android:padding="@dimen/medium_padding"
            android:text="@string/share_app"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            app:drawableRightCompat="@drawable/ic_share" />

        <TextView
            android:id="@+id/support"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_height"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:gravity="start|center_vertical"
            android:padding="@dimen/medium_padding"
            android:text="@string/support"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            app:drawableRightCompat="@drawable/ic_support" />

        <TextView
            android:id="@+id/terms"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_height"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:gravity="start|center_vertical"
            android:padding="@dimen/medium_padding"
            android:text="@string/user_agreement"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            app:drawableRightCompat="@drawable/ic_user_agreement" />

    </LinearLayout>

</LinearLayout>